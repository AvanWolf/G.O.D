<?xml version="1.0" ?>
<!DOCTYPE TranscendenceExtension
[
    <!ENTITY modGODCoreUseableItem      "0xDCBA0501">
    <!ENTITY itGODCoreUseableItem       "0xDCBA0502">
    <!ENTITY stGODCorePlaceItem         "0xDCBA0503">

    <!ENTITY dsDSFCustomPicker          "0xDCBA0064">
]>

<TranscendenceExtension UNID="&modGODCoreUseableItem;" version="1.0">

    <ItemType UNID="&itGODCoreUseableItem;"
        name=           "G.O.D"
        virtual=        "true"
        usekey=         "G"
        >
        <Image imageID="&rsItems1;" imageX="0" imageY="192" imageWidth="96" imageHeight="96"/>
        <Invoke>
            (block Nil
                (dsf_ShowDockScreen (god_CoreScreen))
            )
        </Invoke>
    </ItemType>

    <StationType UNID="&stGODCorePlaceItem;"
        backgroundObject=       "true"
        unique=                 "inSystem"
        virtual=                "true"
        >
        <Image imageID="&rsDebris1;" imageX="0" imageY="0" imageWidth="1" imageHeight="1"/>
        <Events>
          <OnGlobalPlayerEnteredSystem>
            (block Nil
                (if (not (objHasItem gPlayerShip (itmCreate &itGODCoreUseableItem; 1)))
                    (objAddItem gPlayerShip (itmCreate &itGODCoreUseableItem; 1))
                )
            )
          </OnGlobalPlayerEnteredSystem>
        </Events>
    </StationType>

</TranscendenceExtension>
